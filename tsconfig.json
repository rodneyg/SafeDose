{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "types": ["jest"], // Add jest to the types
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "env.d.ts",
    "nativewind-env.d.ts",
    "expo-env.d.ts"
  ]
}
